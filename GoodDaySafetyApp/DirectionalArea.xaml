<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoodDaySafetyApp.DirectionalArea"
             Title="DirectionalArea">
    <ScrollView>
        <VerticalStackLayout>
            <RadioButton Content="N"/>
            <RadioButton Content="NE"/>
            <RadioButton Content="E"/>
            <RadioButton Content="SE"/>
            <RadioButton Content="S"/>
            <RadioButton Content="SW"/>
            <RadioButton Content="W"/>
            <RadioButton Content="NW" />
            <Button 
                x:Name ="NextPage" 
                Text="Next" 
                Clicked="NextPage_Click"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>