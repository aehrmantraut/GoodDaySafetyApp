<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoodDaySafetyApp.ProjectLocation"
             Title="ProjectLocation">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">

            <Label 
            Text="Please enter a project location." 
            HorizontalOptions="Start" />

            <Entry
            x:Name="projectLocationTextBox"
            Text=""
            Placeholder="Enter location here."
            VerticalOptions="Center"
            HorizontalOptions="Start" />

            <HorizontalStackLayout>

                <Button 
                x:Name ="NextPage" 
                Text="Next" 
                Clicked="NextPage_Click">
                    <Button.Triggers>
                    <DataTrigger TargetType="Button"
                     Binding="{Binding Source={x:Reference projectLocationTextBox},
                                       Path=Text.Length}"
                     Value="0">
                        <Setter Property="IsEnabled"
                          Value="False" />
                        <!-- Multiple Setter elements are allowed -->
                    </DataTrigger>
                </Button.Triggers>
                </Button>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>